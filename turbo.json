{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**"],
			"env": ["PAYLOAD_SECRET", "POSTGRES_URL", "DATABASE_URI"]
		},
		"dev": {
			"persistent": true,
			"cache": false,
			"env": ["PORT"]
		},
		"typecheck": {
			"dependsOn": ["^build"],
			"inputs": ["**/*.ts", "**/*.tsx", "**/tsconfig.json"]
		}
	}
}
